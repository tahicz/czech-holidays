{
  "name": "tahicz/czech-holidays",
  "description": "Utility for working with Czech holidays.",
  "keywords": [
    "holidays",
    "czech"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Jan Mlatec",
      "email": "tahicz@tahicz.net",
      "homepage": "https://www.tahicz.net"
    }
  ],
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-calendar": "*",
    "doctrine/collections": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "tahicz\\": "src/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "slevomat/coding-standard": "*",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "phpcs": "php7.4 vendor/bin/phpcs src/",
    "phpcbf": "php7.4 vendor/bin/phpcbf src/",
    "phpstan": "php7.4 vendor/bin/phpstan analyse --level=9 src/"
  }
}
